---
import Layout from "@/layouts/Layout.astro";
import Header from "@/components/sections/Header.astro";
import Footer from "@/components/sections/Footer.astro";
import Button from "@/components/atoms/Button.astro";
import CastYourVote from "@/components/sections/CastYourVote.astro";
---

<Layout title="AI Intern Challenge">
  <Header />
  <main class="section">
    <div class="container text-center">
      <h1 class="text-4xl font-bold">AI Intern Challenge</h1>
      <p class="text-lg text-muted">
        Watch the challenge video and cast your vote!
      </p>
      <div class="video-container">
        <iframe
          src="https://www.youtube.com/embed/5msJvH9k8ko"
          allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
          allowfullscreen></iframe>
      </div>
    </div>
  </main>
  <CastYourVote
    ctaText="Cast Your Vote!"
    qrCodeSrc="https://api.qrserver.com/v1/create-qr-code/?size=180x180&data=https://forms.office.com/pages/responsepage.aspx?id=YnZjRo8WZEKQyEvpQHdiHfvIT55TnedEhEDR5kd4f1tUQkExVFJKSzlGN05BSloyTkpFQUlSVlpSNC4u&route=shorturl"
    voteButtonLink="https://forms.office.com/pages/responsepage.aspx?id=YnZjRo8WZEKQyEvpQHdiHfvIT55TnedEhEDR5kd4f1tUQkExVFJKSzlGN05BSloyTkpFQUlSVlpSNC4u&route=shorturl"
  />
  <Footer />
</Layout>

<style>
  .video-container {
    position: relative;
    padding-bottom: 56.25%; /* 16:9 */
    height: 0;
    overflow: hidden;
    max-width: 100%;
    background: #000;
    margin: var(--space-lg) 0;
  }

  .video-container iframe {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
  }
</style>
